{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "skipLibCheck": true,

    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "include": ["./**/*"]
}
